

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent"
android:orientation="vertical"
android:layout_height="fill_parent" >

<TableLayout
    android:orientation="vertical"
    android:id="@+id/manu_table"
    android:shrinkColumns="0,1,2,3"
    android:stretchColumns="0,1,2,3"
    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:layout_weight="10"
    >
    <TableRow android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:layout_weight="6"
        >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton"
            android:scaleType="centerInside"
            android:src="@drawable/rsz_drawing2"
            android:background="#00000000"
            android:layout_column="0" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton1"
            android:scaleType="centerInside"
            android:src="@drawable/rsz_drawing2"
            android:background="#00000000"
            android:layout_column="1" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton2"
            android:scaleType="centerInside"
            android:src="@drawable/rsz_drawing"
            android:background="#00000000"
            android:layout_column="2" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton3"
            android:scaleType="centerInside"
            android:src="@drawable/rsz_drawing"

            android:background="#00000000"
            android:layout_column="3" />



    </TableRow>


    <TableRow android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        >

        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wrapper Classes"
            android:id="@+id/textView12"
            android:layout_column="0" />

        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Two-dimensional Arrays"
            android:id="@+id/textView11"
            android:layout_column="1" />

        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Interfaces"
            android:id="@+id/textView10"
            android:layout_column="2" />

        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inheritance"
            android:id="@+id/textView9"
            android:layout_column="3" />


    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:layout_weight="6"
        >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton5"
            android:scaleType="centerInside"
            android:src="@drawable/rsz_drawing"
            android:background="#00000000"
            android:layout_column="0" />



    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        >

        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Constants"
            android:id="@+id/textView16"
            android:layout_column="0" />

    </TableRow>
</TableLayout>


<TableLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    >

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:paddingBottom="10dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_column="0"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="60dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton9"
                android:layout_alignParentTop="true"
                android:src="@drawable/rsz_house2"
                android:scaleType="fitCenter"
                android:background="#00000000"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton10"
                android:scaleType="fitCenter"
                android:src="@drawable/rsz_figure"
                android:background="#00000000"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imageButton9" />
        </RelativeLayout>
    </TableRow>

</TableLayout>


</LinearLayout>




