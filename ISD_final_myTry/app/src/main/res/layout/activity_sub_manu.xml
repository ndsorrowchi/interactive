<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:shrinkColumns="1"
android:stretchColumns="0,2"
android:gravity="center_vertical"
android:id="@+id/action_bar">


<TableRow android:gravity="center">

    <Button
        android:layout_width="2dip"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/button1_sub_s"
        android:shape="rectangle"/>

    <Button
        android:layout_width="1dip"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/button2_sub_s"

        android:layout_span="1"
        android:visibility="invisible"/>

    <Button
        android:layout_width="2dip"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/button3_sub_s"
        android:layout_span="2"
        />
</TableRow>

<TableRow android:gravity="center"
    android:layout_marginTop="30dp">

    <Button
        android:layout_width="1dip"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/button4_sub_s"
        android:layout_column="0"/>

    <Button
        android:layout_width="1dip"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/button5_sub_s"
        android:layout_column="1"
        android:visibility="invisible"/>

    <Button
        android:layout_width="1dip"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/button6_sub_s"/>
</TableRow>

<TableRow android:gravity="center"
    android:layout_marginTop="30dp">

    <Button
        android:layout_width="wrap_content"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/button7_sub_s"
        android:layout_column="0"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/button8_sub_s"
        android:layout_column="1"
        android:visibility="invisible"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/button9_sub_s"/>
</TableRow>

<TableRow android:gravity="center"
    android:layout_marginTop="30dp">

    <Button
        android:layout_width="wrap_content"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/button10_sub_s"
        android:layout_column="0"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/button11_sub_s"
        android:layout_column="1"
        android:visibility="invisible"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/button12_sub_s"/>
</TableRow>



</TableLayout>

